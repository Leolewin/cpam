<packages>
  <package name="helloworld" version="2.7" revision="2">
    <package-manager name="depot">
      <category>Applications/System</category>
      <title>Hello World example package</title>
      <vendor>GNU</vendor>

      <description>
Hello is a example program to demostrate the use of GNU autoconf tool-sets.
We extend hello with more actions and components for the purpose of using TWW tool-sets.
      </description>

      <install-name>hello27</install-name>

      <pkgname-base>MOTOHello27</pkgname-base>

      <version>2.7</version>
      <revision>2</revision>


      <replace pkgname-base="MOTOHelloworld12"
        install-name="helloworld12"/>
      <replace pkgname-base="MOTOHelloworld11"
        install-name="helloworld11"/>
      <replace pkgname-base="MOTOHelloworld12"
        install-name="helloworld12"/>

      <changelog>
        <change date="2010 March 4" revision="2"
        author="T.J. Yang" email="tjyang2001@gmail.com">
        </change>
      </changelog>
    </package-manager>


