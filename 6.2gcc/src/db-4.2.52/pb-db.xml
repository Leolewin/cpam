<?xml version="1.0"?>
<packages>
  <package name="db" version="4.2.52" revision="3">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>Berkeley DB</title>
      <vendor>Sleepycat Software</vendor>

      <description attribution="The OpenPKG Project">
Berkeley DB is a programmatic toolkit that provides high-performance
built-in database support for desktop and server applications and for
information appliances. The Berkeley DB access methods include B+tree,
Extended Linear Hashing, Fixed and Variable-length records, and
Queues. Berkeley DB provides full transactional support, database
recovery, online backups, and separate access to locking, logging and
shared memory caching subsystems.
      </description>

      <install-name>libdb42</install-name>

      <pkgname-base>TWWldb42</pkgname-base>

      <version>4.2.52</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
      </subpkg>

      <replace pkgname-base="TWWldb41"
        install-name="libdb41"/>
      <replace pkgname-base="TWWldb40"
        install-name="libdb40"/>
      <replace pkgname-base="TWWldb31"
        install-name="libdb31"/>
      <replace pkgname-base="TWWldb2"
        install-name="libdb2"/>
    </package-manager>

    <changelog>
      <change date="2004 June 25" revision="3"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Updated patch for HP-UX 10.20 from
Sleepycat</para></item>
      </change>

      <change date="2004 May 3" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Disable O_DIRECT on IRIX</para></item>
      </change>

      <change date="2004 February 26" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Apply Sleepycat HP-UX 10.20 patch</para></item>
      </change>
    </changelog>
  </package>
</packages>
