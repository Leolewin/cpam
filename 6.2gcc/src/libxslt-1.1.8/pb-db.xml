<?xml version="1.0"?>
<packages>
  <package name="libxslt" version="1.1.8" revision="2">
    <package-manager name="pkgadd">
      <category>Development/Tools</category>
      <title>XSLT C Library</title>
      <vendor>Daniel Veillard</vendor>

      <description attribution="The OpenPKG Project">
LibXSLT is a XML Stylesheet Language (XSL) Transformation C library
developed for the Gnome project. It provides an XSLT engine for
transforming XML documents into other (output) markup languages.
      </description>

      <install-name>libxslt11</install-name>

      <pkgname-base>TWWxsl11</pkgname-base>

      <version>1.1.8</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWxml26"
          title="XML C Library"
          subpkg="runtime">v&gt;=2.6.11</depend>
      </subpkg>

      <replace pkgname-base="TWWls102"
        install-name="libxslt102"/>
    </package-manager>

    <changelog>
      <change date="2004 August 25" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Add 64-bit library for AIX 5.x, HP-UX 11.x, IRIX
6.5, and Solaris 7-9/SPARC</para></item>
      </change>
    </changelog>
  </package>
</packages>
