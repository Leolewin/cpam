<?xml version="1.0"?>
<packages>
  <package name="ncftp" version="3.1.7">
    <package-manager name="pkgadd">
      <category>Applications/Internet</category>
      <title>NcFTP FTP client</title>
      <vendor>Mike Gleason</vendor>

      <description>
NcFTP Client (also known as just NcFTP) is a set of FREE application
programs implementing the File Transfer Protocol (FTP).
      </description>

      <install-name>ncftp31</install-name>

      <pkgname-base>TWWncf31</pkgname-base>

      <version>3.1.7</version>
      <revision>1</revision>

      <config>etc/ncftp.firewall</config>
      <config>etc/ncftp.firewall.fixed</config>
      <config>etc/ncftp.prefs_v3</config>
      <config>etc/ncftp.prefs_v3.fixed</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWncr54"
          title="Ncurses Curses Library"
          subpkg="runtime">v&gt;=5.4</depend>
      </subpkg>

      <replace pkgname-base="TWWncf30"
        install-name="ncftp30"/>
    </package-manager>
  </package>
</packages>
