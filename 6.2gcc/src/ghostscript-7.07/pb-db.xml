<?xml version="1.0"?>
<packages>
  <package name="ghostscript" version="7.07" revision="2">
    <package-manager name="pkgadd">
      <category>Applications/Publishing</category>
      <title>GNU Ghostscript</title>
      <vendor>artofcode LLC</vendor>

      <description attribution="The OpenPKG Project">
Ghostscript is an interpreter for the PostScript language, with the
ability to convert PostScript language files to many raster formats,
view them on displays, and print them on printers that don't have
PostScript language capability built in. It also works with Portable
Document Format files (PDF), providing the same set of functionality
as with PostScript.
      </description>

      <install-name>ghostscript70</install-name>

      <pkgname-base>TWWgs70</pkgname-base>

      <version>7.07</version>
      <revision>1</revision>

      <variable>
        <path name="FONTS_CONF"
          install-name="fcpackage22">etc/fonts.conf</path>
        <path name="GS_FONT_DIR"
          install-name="ghostscript70">share/fonts</path>
      </variable>

      <subpkg type="runtime">
        <depend pkgname-base="TWWfcp22"
          title="Font configuration and rendering"
          subpkg="runtime">v&gt;=2.2</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWpl582"
          title="Perl Programming Language"
          subpkg="runtime">v&gt;=5.8.2</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.4</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.4</depend>

        <postinstall path="pkg/add-font-entry"
          checksum="6d33429676c2a4789af058da3d5737de"
          checksum-type="md5" size="1910"/>
        <preremove path="pkg/remove-font-entry"
          checksum="2308169e4ce05c4906e40ca08faab4c7"
          checksum-type="md5" size="1889"/>
      </subpkg>

      <replace pkgname-base="TWWgs65"
        install-name="ghostscript65"/>
      <replace pkgname-base="TWWgs60"
        install-name="ghostscript60"/>
      <replace pkgname-base="TWWgs"
        install-name="ghostscript"/>
    </package-manager>

    <changelog>
      <change date="2004 April 17" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Add font path to font configuration
file</para></item>
      </change>

      <change date="2004 January 26" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Fix default font search path</para></item>
      </change>
    </changelog>
  </package>
</packages>
