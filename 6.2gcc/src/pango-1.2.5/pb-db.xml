<?xml version="1.0"?>
<packages>
  <package name="pango" version="1.2.5" revision="2">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>Pango Text Layout/Rendering Library</title>
      <vendor>Owen Taylor</vendor>

      <description>
Pango is a library for layout and rendering of text, with an emphasis
on internationalization. Pango can be used anywhere that text layout
is needed; however, most of the work on Pango-1.0 was done using the
GTK+ widget toolkit as a test platform. Pango forms the core of text
and font handling for GTK+-2.0.
      </description>

      <install-name>libpango12</install-name>

      <pkgname-base>TWWlpn12</pkgname-base>

      <version>1.2.5</version>
      <revision>1</revision>

      <config>etc/pangorc</config>
      <config>etc/pangox.aliases</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWfcp22"
          title="Font configuration and rendering"
          subpkg="runtime">v&gt;=2.2</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWglb22"
          title="Glib Library"
          subpkg="runtime">v&gt;=2.2.3</depend>
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
        <depend pkgname-base="TWWttf21"
          title="FreeType Library"
          subpkg="runtime">v&gt;=2.1.2</depend>
      </subpkg>

      <replace pkgname-base="TWWlpn10"
        install-name="libpango10"/>
    </package-manager>

    <changelog>
      <change date="2004 January 14" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade Glib dependency to latest 2.2.3
release</para></item>
      </change>

      <change date="2003 September 23" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Move pango.modules to lib/modules 
directory</para></item>
      </change>
    </changelog>
  </package>
</packages>
