<?xml version="1.0"?>
<packages>
  <package name="transfig" version="3.2.3d">
    <package-manager name="pkgadd">
      <category>Applications/Multimedia</category>
      <title>Transfig</title>
      <vendor>Brian V. Smith</vendor>

      <description>
TransFig is a set of tools for creating TeX documents with graphics
which are portable, in the sense that they can be printed in a wide
variety of environments. The fig2dev program is used by xfig when
exporting drawings to the various output formats such as PostScript
(and EPS), CGM, JPEG, LaTeX, PNG, and more.
      </description>

      <install-name>transfig32</install-name>

      <pkgname-base>TWWtfg32</pkgname-base>

      <version>3.2.3d</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.0</depend>
        <depend pkgname-base="TWWxpm"
          title="XPM Image Library"
          subpkg="runtime">v&gt;=3.4k</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.3</depend>
      </subpkg>

      <replace pkgname-base="TWWtfig"
        install-name="transfig"/>
    </package-manager>
  </package>
</packages>
