<?xml version="1.0"?>
<packages>
  <package name="libwmf" version="0.2.8" revision="2">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>WMF Graphics Library</title>
      <vendor>Caolan McNamara</vendor>

      <description attribution="The OpenPKG Project">
libwmf is a library for reading vector images in native Windows
Metafile Format (WMF) and for either (a) displaying them in, e.g., an
X window; or (b) converting them to more standard/open file formats
such as, e.g., the W3C's XML-based Scaleable Vector Graphic (SVG)
format.
      </description>

      <install-name>libwmf02</install-name>

      <pkgname-base>TWWwmf02</pkgname-base>

      <version>0.2.8</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWexpat"
          title="XML parser Library"
          subpkg="runtime">v&gt;=1.95.6</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWpl582"
          title="Perl Programming Language"
          subpkg="runtime">v&gt;=5.8.2</depend>
        <depend pkgname-base="TWWplt24"
          title="GNU Plotting Utilities"
          subpkg="runtime">v&gt;=2.4.1</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.4</depend>
        <depend pkgname-base="TWWttf21"
          title="FreeType Library"
          subpkg="runtime">v&gt;=2.1.4</depend>
        <depend pkgname-base="TWWxpm"
          title="XPM Image Library"
          subpkg="runtime">v&gt;=3.4k</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.4</depend>
      </subpkg>

      <replace pkgname-base="TWWwmf01"
        install-name="libwmf01"/>
    </package-manager>

    <changelog>
      <change date="2004 July 30" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Remove calls to nan() and strtof() on Tru64 UNIX
4.0D</para></item>
      </change>

      <change date="2004 January 14" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade Perl dependency to 5.8.2</para></item>
        <item><para>Upgrade libexpat dependency to 1.95.6</para></item>
        <item><para>Upgrade FreeType dependency to 2.1.4</para></item>
      </change>
    </changelog>
  </package>
</packages>
