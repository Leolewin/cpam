<?xml version="1.0"?>
<packages>
  <package name="lyx" version="1.3.4" revision="1">
    <package-manager name="pkgadd">
      <category>Applications/Publishing</category>
      <title>LyX Document Processor</title>
      <vendor>The LyX Team</vendor>

      <description>
LyX is an advanced open source document processor that encourages an
approach to writing based on the structure of your documents, not
their appearance. LyX lets you concentrate on writing, leaving details
of visual layout to the software.

LyX produces high quality, professional output -- using LaTeX, an
industrial strength typesetting engine, in the background; LyX is far
more than a front-end to LaTeX, however. No knowledge of LaTeX is
necessary to use LyX, although it will give a user more power.
      </description>

      <install-name>lyx13</install-name>

      <pkgname-base>TWWlyx13</pkgname-base>

      <version>1.3.4</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWaik12"
          title="Aiksaurus thesaurus library"
          subpkg="runtime">v&gt;=1.2.1</depend>
        <depend pkgname-base="TWWasp05"
          title="GNU Aspell spell checker"
          subpkg="runtime">v&gt;=0.50.5</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWicn19"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.9.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWpl582"
          title="Perl Programming Language"
          subpkg="runtime">v&gt;=5.8.2</depend>
        <depend pkgname-base="TWWqt33"
          title="Qt Graphics Library"
          subpkg="runtime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWtex20"
          title="teTeX TeX distribution"
          subpkg="packages">v&gt;=2.0.2</depend>
        <depend pkgname-base="TWWtex20"
          title="teTeX TeX distribution"
          subpkg="runtime">v&gt;=2.0.2</depend>
        <depend pkgname-base="TWWxpm"
          title="XPM Image Library"
          subpkg="runtime">v&gt;=3.4k</depend>
      </subpkg>

      <replace pkgname-base="TWWlyx12"
        install-name="lyx12"/>
    </package-manager>

    <changelog>
      <change date="2004 July 28" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade Aiksaurus dependency from 1.0.1 to
1.2.1</para></item>
        <item><para>Upgrade libiconv dependency from 1.8 to
1.9.2</para></item>
        <item><para>Upgrade Qt dependency from 3.3.1 to
3.3.2</para></item>
      </change>
    </changelog>
  </package>
</packages>
