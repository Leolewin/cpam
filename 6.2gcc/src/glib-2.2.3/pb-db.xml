<?xml version="1.0"?>
<packages>
  <package name="glib" version="2.2.3" revision="2">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>Glib Library</title>
      <vendor>The Glib Team</vendor>

      <description>
GLib is the low-level core library that forms the basis of GTK+ and
GNOME. It provides data structure handling for C, portability
wrappers, and interfaces for such runtime functionality as an event
loop, threads, dynamic loading, and an object system.
      </description>

      <install-name>libglib22</install-name>

      <pkgname-base>TWWglb22</pkgname-base>

      <version>2.2.3</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
        <depend pkgname-base="TWWpl582"
          title="Perl Programming Language"
          subpkg="runtime">v&gt;=5.8.2</depend>
      </subpkg>

      <replace pkgname-base="TWWglb20"
        install-name="libglib20"/>
      <replace pkgname-base="TWWglb12"
        install-name="glib12"/>
    </package-manager>

    <changelog>
      <change date="2004 January 5" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Force usage of GNU gettext and iconv</para></item>
        <item><para>Upgrade Perl dependency to 5.8.2</para></item>
      </change>

      <change date="2003 September 22" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Backport glib/gnulib (v)snprintf functions from
2.4 to resolve text failures</para></item>
      </change>
    </changelog>
  </package>
</packages>
