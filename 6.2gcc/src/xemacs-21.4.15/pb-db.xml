<?xml version="1.0"?>
<packages>
  <package name="xemacs" version="21.4.15">
    <package-manager name="pkgadd">
      <category>Applications/Editors</category>
      <title>XEmacs Editor</title>
      <vendor>XEmacs Development Team</vendor>
      <vendor subpkg="packages">3rd Parties</vendor>

      <description attribution="FreeBSD Ports Collection">
XEmacs is the extensible, customizable, self-documenting real-time
display editor. XEmacs has similar functionality to GNU Emacs. It uses
a different display model, including support for Motif menu and scroll
bars and the ability to run as a widget inside other applications.
      </description>

      <install-name>xemacs214</install-name>

      <pkgname-base>TWWxm214</pkgname-base>

      <version>21.4.15</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWldb31"
          title="Berkeley DB"
          subpkg="runtime">v&gt;=3.1.17</depend>
        <depend pkgname-base="TWWncr54"
          title="Ncurses Curses Library"
          subpkg="runtime">v&gt;=5.4</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.4</depend>
        <depend pkgname-base="TWWtif35"
          title="TIFF Image Library"
          subpkg="runtime">v&gt;=3.5.7</depend>
        <depend pkgname-base="TWWxpm"
          title="XPM Image Library"
          subpkg="runtime">v&gt;=3.4k</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.4</depend>
      </subpkg>

      <replace pkgname-base="TWWxem21"
        install-name="xemacs21"/>
    </package-manager>
  </package>
</packages>
