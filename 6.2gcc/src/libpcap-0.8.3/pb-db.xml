<?xml version="1.0"?>
<packages>
  <package name="libpcap" version="0.8.3">
    <package-manager name="pkgadd">
      <category>Development/Libraries</category>
      <title>Packet Capture Library</title>
      <vendor>The Tcpdump Group</vendor>

      <description>
libpcap is a system-independent interface for user-level packet
capture. libpcap provides a portable framework for low-level network
monitoring.
      </description>

      <install-name>libpcap08</install-name>

      <pkgname-base>TWWlpc08</pkgname-base>

      <version>0.8.3</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
      </subpkg>

      <replace pkgname-base="TWWlpc07"
        install-name="libpcap07"/>
      <replace pkgname-base="TWWlpcap"
        install-name="libpcap"/>
    </package-manager>
  </package>
</packages>
