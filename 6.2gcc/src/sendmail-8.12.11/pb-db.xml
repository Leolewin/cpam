<?xml version="1.0"?>
<packages>
  <package name="sendmail" version="8.12.11">
    <package-manager name="pkgadd">
      <category>System Environment/Daemons</category>
      <title>Sendmail Mail Server</title>
      <vendor>Sendmail, Inc.</vendor>

      <description attribution="freshmeat.net">
Sendmail is a Mail Transfer Agent, which is the program that moves
mail from one machine to another. Sendmail implements a general
internetwork mail routing facility, featuring aliasing and forwarding,
automatic routing to network gateways, and flexible configuration.
      </description>

      <install-name>sendmail81211</install-name>

      <pkgname-base>TWWs812b</pkgname-base>

      <version>8.12.11</version>
      <revision>2</revision>

      <init name="/etc/init.d/TWWsendmail81211"
        path="pkg/init-sol"
        checksum="2103632ddb6dc3c31f2925142ca6b28a"
        checksum-type="md5" size="1583"/>
      <init link-src="/etc/rc2.d/S79TWWsendmail81211"
        link-dest="/etc/init.d/TWWsendmail81211"/>
      <init link-src="/etc/rc1.d/K19TWWsendmail81211"
        link-dest="/etc/init.d/TWWsendmail81211"/>
      <init link-src="/etc/rc0.d/K19TWWsendmail81211"
        link-dest="/etc/init.d/TWWsendmail81211"/>

      <config>/etc/init.d/TWWsendmail81211</config>
      <config>/etc${INSTALL_PREFIX}/Makefile</config>
      <config>/etc${INSTALL_PREFIX}/access</config>
      <config>/etc${INSTALL_PREFIX}/aliases</config>
      <config>/etc${INSTALL_PREFIX}/msp-authinfo</config>
      <config>/etc${INSTALL_PREFIX}/relay-domains</config>
      <config>/etc${INSTALL_PREFIX}/sendmail.cf</config>
      <config>/etc${INSTALL_PREFIX}/sendmail.mc</config>
      <config>/etc${INSTALL_PREFIX}/service.switch</config>
      <config>/etc${INSTALL_PREFIX}/submit.cf</config>
      <config>/etc${INSTALL_PREFIX}/submit.mc</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWcsl21"
          title="Cyrus SASL Library"
          subpkg="runtime">v&gt;=2.1.15</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWld21c"
          title="OpenLDAP LDAP Server"
          subpkg="runtime">v&gt;=2.1.27</depend>
        <depend pkgname-base="TWWldb42"
          title="Berkeley DB"
          subpkg="runtime">v&gt;=4.2.52</depend>
        <depend pkgname-base="TWWm4"
          title="GNU M4"
          subpkg="runtime">v&gt;=1.4</depend>
        <depend pkgname-base="TWWss097"
          title="OpenSSL SSL/TLS Crypto Toolkit"
          subpkg="runtime">v&gt;=0.9.7b</depend>
      </subpkg>

      <replace pkgname-base="TWWs812a"
        install-name="sendmail81210"/>
      <replace pkgname-base="TWWs8129"
        install-name="sendmail8129"/>
      <replace pkgname-base="TWWs8127"
        install-name="sendmail8127"/>
      <replace pkgname-base="TWWs8116"
        install-name="sendmail8116"/>

      <changelog>
        <change date="2004 September 15" revision="2"
        author="Albert Chin-A-Young" email="china@thewrittenword.com">
          <item><para>Remove dependency on PRNGd</para></item>
        </change>
      </changelog>
    </package-manager>
  </package>
</packages>
