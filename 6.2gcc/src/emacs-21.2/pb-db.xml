<?xml version="1.0"?>
<packages>
  <package name="emacs" version="21.2" revision="4">
    <package-manager name="pkgadd">
      <category>Applications/Editors</category>
      <title>GNU Emacs Editor</title>
      <vendor>Free Software Foundation</vendor>
      <vendor subpkg="packages">3rd Parties</vendor>

      <description attribution="freshmeat.net">
Emacs is the extensible, customizable, self-documenting real-time
display editor. Emacs has special code editing modes, a scripting
language (elisp), and comes with many packages for doing mail, news
and more, all in your editor.
      </description>

      <install-name>emacs21</install-name>

      <pkgname-base>TWWemc21</pkgname-base>

      <version>21.2</version>
      <revision>1</revision>

      <config>share/lisp/default</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWlungf"
          title="GIF Library"
          subpkg="runtime">v&gt;=4.1.1</depend>
        <depend pkgname-base="TWWncr54"
          title="Ncurses Curses Library"
          subpkg="runtime">v&gt;=5.4</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.4</depend>
        <depend pkgname-base="TWWtif35"
          title="TIFF Image Library"
          subpkg="runtime">v&gt;=3.5.7</depend>
        <depend pkgname-base="TWWxpm"
          title="XPM Image Library"
          subpkg="runtime">v&gt;=3.4k</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.4</depend>
      </subpkg>

      <replace pkgname-base="TWWemc20"
        install-name="emacs20"/>
    </package-manager>

    <changelog>
      <change date="2004 April 9" revision="4"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Disable getaddrinfo()/gai_strerror() on IRIX as 
only available in newer releases of 6.5.x</para></item>
      </change>

      <change date="2004 March 20" revision="3"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade Ncurses dependency to 5.4</para></item>
      </change>
    </changelog>
  </package>
</packages>
