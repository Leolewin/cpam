<?xml version="1.0"?>
<packages>
  <package name="libxml" version="2.5.11" revision="3">
    <package-manager name="pkgadd">
      <category>Development/Tools</category>
      <title>XML C Library</title>
      <vendor>Daniel Veillard</vendor>

      <description attribution="The OpenPKG Project">
LibXML is a Extensible Markup Language (XML) C library developped for
the Gnome project. It provides an (optionally validating) XML parser,
XPath and XPointer implementations, DOM and SAX interfaces and support
fetching remote resources via HTTP and FTP.
      </description>

      <install-name>libxml25</install-name>

      <pkgname-base>TWWxml25</pkgname-base>

      <version>2.5.11</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.4</depend>
      </subpkg>
    </package-manager>

    <changelog>
      <change date="2004 August 25" revision="3"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Add 64-bit library for AIX 5.x, HP-UX 11.x, IRIX
6.5, and Solaris 7-9/SPARC</para></item>
      </change>

      <change date="2004 April 14" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Fix thread problems on Tru64 UNIX</para></item>
      </change>

      <change date="2004 February 27" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Fix for buffer overflow in URI parsing code <ulink url="http://cve.mitre.org/cgi-bin/cvename.cgi?name=CAN-2004-0110">http://cve.mitre.org/cgi-bin/cvename.cgi?name=CAN-2004-0110</ulink></para></item>
      </change>
    </changelog>
  </package>
</packages>
