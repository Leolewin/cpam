<?xml version="1.0"?>
<packages>
  <package name="indent" version="2.2.9" revision="1">
    <package-manager name="pkgadd">
      <category>Applications/Text</category>
      <title>GNU Indent</title>
      <vendor>Free Software Foundation</vendor>

      <description>
GNU indent changes the appearance of a C program by inserting or
deleting whitespace according to a plethora of options. Some canned
styles of formatting are supported as well. GNU indent is a descendant
of BSD indent.

GNU indent does NOT work for C++.
      </description>

      <install-name>indent2</install-name>

      <pkgname-base>TWWindt2</pkgname-base>

      <version>2.2.9</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
      </subpkg>
    </package-manager>

    <changelog>
      <change date="2003 August 29" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Add gettext dependency</para></item>
      </change>
    </changelog>
  </package>
</packages>
