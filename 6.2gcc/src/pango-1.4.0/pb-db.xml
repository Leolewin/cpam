<?xml version="1.0"?>
<packages>
  <package name="pango" version="1.4.0">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>Pango Text Layout/Rendering Library</title>
      <vendor>Owen Taylor</vendor>

      <description>
Pango is a library for layout and rendering of text, with an emphasis
on internationalization. Pango can be used anywhere that text layout
is needed; however, most of the work on Pango-1.0 was done using the
GTK+ widget toolkit as a test platform. Pango forms the core of text
and font handling for GTK+-2.0.
      </description>

      <install-name>libpango14</install-name>

      <pkgname-base>TWWlpn14</pkgname-base>

      <version>1.4.0</version>
      <revision>1</revision>

      <config>etc/pangorc</config>
      <config>etc/pangox.aliases</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWfcp22"
          title="Font configuration and rendering"
          subpkg="runtime">v&gt;=2.2</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWglb24"
          title="Glib Library"
          subpkg="runtime">v&gt;=2.4.4</depend>
        <depend pkgname-base="TWWgt014"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.14.1</depend>
        <depend pkgname-base="TWWicn19"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.9.2</depend>
        <depend pkgname-base="TWWttf21"
          title="FreeType Library"
          subpkg="runtime">v&gt;=2.1.2</depend>
      </subpkg>
    </package-manager>
  </package>
</packages>
