<?xml version="1.0"?>
<packages>
  <package name="nano" version="1.2.1" revision="2">
    <package-manager name="pkgadd">
      <category>Applications/Editors</category>
      <title>Nano editor</title>
      <vendor>Chris Allegretta</vendor>

      <description>
nano is a small, free and friendly editor which aims to replace Pico,
the default editor included in the non-free Pine package. Rather than
just copying Pico's look and feel, nano also implements some missing
(or disabled by default) features in Pico, such as "search and
replace" and "go to line number".
      </description>

      <install-name>nano12</install-name>

      <pkgname-base>TWWnan12</pkgname-base>

      <version>1.2.1</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWglb12"
          title="Glib Library"
          subpkg="runtime">v&gt;=1.2.10</depend>
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
        <depend pkgname-base="TWWncr54"
          title="Ncurses Curses Library"
          subpkg="runtime">v&gt;=5.4</depend>
      </subpkg>

      <replace pkgname-base="TWWnano10"
        install-name="nano10"/>
    </package-manager>

    <changelog>
      <change date="2004 April 16" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade ncurses dependency from 5.2 to
5.4</para></item>
      </change>

      <change date="2004 February 24" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Rebuild against Glib SysV-style shared
libraries on AIX 5</para></item>
      </change>
    </changelog>
  </package>
</packages>
