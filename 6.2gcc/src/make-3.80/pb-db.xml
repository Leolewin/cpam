<?xml version="1.0"?>
<packages>
  <package name="make" version="3.80" revision="2">
    <package-manager name="pkgadd">
      <category>Development/Tools</category>
      <title>GNU Make</title>
      <vendor>Free Software Foundation</vendor>

      <description attribution="The OpenPKG Project">
This is the GNU variant of make(1). The purpose of this utility is to
determine automatically which pieces of a large program need to be
recompiled, and issue the commands to recompile them.
      </description>

      <install-name>gmake38</install-name>

      <pkgname-base>TWWgmk38</pkgname-base>

      <version>3.80</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
      </subpkg>

      <replace pkgname-base="TWWgmake"
        install-name="gmake"/>
    </package-manager>

    <changelog>
      <change date="2004 June 8" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Add missing gettext dependency</para></item>
      </change>

      <change date="2004 March 22" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Revert to virgin 3.80 without fixes from the CVS
branch as make.h changes to EINTRLOOP/ENULLLOOP cause problems on
HP-UX and Redhat Linux</para></item>
      </change>
    </changelog>
  </package>
</packages>
