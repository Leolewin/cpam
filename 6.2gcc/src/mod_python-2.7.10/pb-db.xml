<?xml version="1.0"?>
<packages>
  <package name="mod_python" version="2.7.10">
    <package-manager name="pkgadd">
      <category>Development/Languages</category>
      <title>mod_python embedded Apache Python interpreter</title>
      <vendor>Gregory Trubetskoy</vendor>

      <description>
Mod_python is an Apache module that embeds the Python interpreter
within the server. With mod_python you can write web-based
applications in Python that will run many times faster than
traditional CGI and will have access to advanced features such as
ability to retain database connections and other data between hits and
access to Apache internals.
      </description>

      <install-name>modpython27</install-name>

      <pkgname-base>TWWmpy27</pkgname-base>

      <version>2.7.10</version>
      <revision>1</revision>

      <variable>
        <path name="APACHE"
          install-name="apache1331"></path>
        <path name="PYTHON_INCLUDE_PATHS"
          install-name="python232">etc/include.paths</path>
      </variable>

      <subpkg type="runtime">
        <depend pkgname-base="TWWa1331"
          title="Apache Web Server"
          subpkg="runtime">v&gt;=1.3.31</depend>
        <depend pkgname-base="TWWa1331"
          title="Apache Web Server"
          subpkg="conf">v&gt;=1.3.31</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWpy232"
          title="Python Interpreter"
          subpkg="runtime">v&gt;=2.3.2</depend>

        <postinstall path="pkg/add-to-httpd.conf"
          checksum="b3322fa01b73874fe1a5ee4e5f2e1a83"
          checksum-type="md5" size="4593"/>
        <preremove path="pkg/remove-from-httpd.conf"
          checksum="7052acb1eeff91e2e85b4024de50d031"
          checksum-type="md5" size="2842"/>
      </subpkg>
    </package-manager>
  </package>
</packages>
