<?xml version="1.0"?>
<packages>
  <package name="fcpackage" version="2.2" revision="8">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>Font configuration and rendering</title>
      <vendor>Keith Packard</vendor>

      <description>
Anti-alias rendering support for X-based applications using
fontconfig, Xft, and Xrender.
      </description>

      <install-name>fcpackage22</install-name>

      <pkgname-base>TWWfcp22</pkgname-base>

      <version>2.2</version>
      <revision>1</revision>

      <config>etc/local.conf</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWexpat"
          title="XML parser Library"
          subpkg="runtime">v&gt;=1.95.5</depend>
        <depend pkgname-base="TWWfnt10"
          title="X11 Fonts"
          subpkg="runtime">v&gt;=1.0</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWttf21"
          title="FreeType Library"
          subpkg="runtime">v&gt;=2.1.2</depend>
      </subpkg>

      <replace pkgname-base="TWWfcp21"
        install-name="fcpackage21"/>
    </package-manager>

    <changelog>
      <change date="2004 March 11" revision="8"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade fontconfig to 2.2.92</para></item>
        <item><para>Upgrade Xft to 2.1.6</para></item>
      </change>

      <change date="2004 January 12" revision="7"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Disable error message about X Render extension not 
being available:</para></item>
      </change>

      <change date="2003 July 30" revision="6"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Change default font path on Redhat
Linux</para></item>
      </change>

      <change date="2003 June 1" revision="5"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>fontconfig CVS sync. Fix for Solaris italic
fonts.</para></item>
      </change>

      <change date="2003 April 30" revision="4"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Add dependency on fonts package</para></item>
      </change>

      <change date="2003 April 29" revision="3"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade to fontconfig 2.2</para></item>
      </change>

      <change date="2003 April 16" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Replace _XAllocTemp(), _XFreeTemp() with
malloc/free from recommendation by XFree86 developers on systems
without them (bug #135)</para></item>
      </change>

      <change date="2003 April 2" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Fix path references</para></item>
      </change>
    </changelog>
  </package>
</packages>
