<?xml version="1.0"?>
<packages>
  <package name="grep" version="2.5.1" revision="1">
    <package-manager name="pkgadd">
      <category>Applications/Text</category>
      <title>GNU Grep</title>
      <vendor>Free Software Foundation</vendor>

      <description attribution="The OpenPKG Project">
Grep searches the named input FILEs (or standard input if no files are
named, or the file name - is given) for lines containing a match to
the given PATTERN. By default, grep prints the matching lines.
      </description>

      <install-name>grep25</install-name>

      <pkgname-base>TWWgrp25</pkgname-base>

      <version>2.5.1</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWpcr44"
          title="PCRE Perl regex Library"
          subpkg="runtime">v&gt;=4.4</depend>
      </subpkg>

      <replace pkgname-base="TWWgrep"
        install-name="grep"/>
    </package-manager>

    <changelog>
      <change date="2003 November 10" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade PCRE dependency to 4.4</para></item>
      </change>
    </changelog>
  </package>
</packages>
