<?xml version="1.0"?>
<packages>
  <package name="pkgconfig" version="0.15.0" revision="2">
    <package-manager name="pkgadd">
      <category>Development/Tools</category>
      <title>Library Metainformation Tool</title>
      <vendor>Havoc Pennington</vendor>

      <description attribution="The OpenPKG Project">
pkg-config is a system for managing library compile/link flags that
works with automake and autoconf.
      </description>

      <install-name>pkgconfig</install-name>

      <pkgname-base>TWWpkgc</pkgname-base>

      <version>0.15.0</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
      </subpkg>
    </package-manager>

    <changelog>
      <change date="2004 August 1" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Quote PKG_CHECK_MODULES definition in
pkg.m4 for Automake 1.8</para></item>
      </change>

      <change date="2004 January 8" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Disable compatibility mode by searching in legacy
*-config scripts</para></item>
      </change>
    </changelog>
  </package>
</packages>
