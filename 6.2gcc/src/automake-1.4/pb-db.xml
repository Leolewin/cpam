<?xml version="1.0"?>
<packages>
  <package name="automake" version="1.4" revision="1">
    <package-manager name="pkgadd">
      <category>Development/Tools</category>
      <title>GNU Automake</title>
      <vendor>Tom Tromey</vendor>

      <description>
Automake is a tool for automatically generating `Makefile.in's from
files called `Makefile.am'. The generated `Makefile.in's are compliant
with the GNU Makefile standards.
      </description>

      <install-name>automake</install-name>

      <pkgname-base>TWWamake</pkgname-base>

      <version>1.4</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWpl582"
          title="Perl Programming Language"
          subpkg="runtime">v&gt;=5.8.2</depend>
      </subpkg>
    </package-manager>

    <changelog>
      <change date="2004 January 10" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Upgrade Perl dependency to 5.8.2</para></item>
      </change>
    </changelog>
  </package>
</packages>
