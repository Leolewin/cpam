<?xml version="1.0"?>
<packages>
  <package name="openldap" version="2.1.27">
    <package-manager name="pkgadd">
      <category>System Environment/Daemons</category>
      <title>OpenLDAP LDAP Server</title>
      <vendor>OpenLDAP LDAP Server Foundation</vendor>

      <description attribution="FreeBSD Ports Collection">
OpenLDAP is a suite of Lightweight Directory Access Protocol (LDAP)
servers, clients, utilities and development tools. It is derived from
the University of Michigan LDAP release 3.3.
      </description>

      <install-name>openldap2127</install-name>

      <pkgname-base>TWWld21c</pkgname-base>

      <version>2.1.27</version>
      <revision>1</revision>

      <init name="/etc/init.d/TWWopenldap2127"
        path="pkg/init-sol"
        checksum="ec9a8075b789f729d9c34d0282873a6d"
        checksum-type="md5" size="958"/>
      <init link-src="/etc/rc2.d/S79TWWopenldap2127"
        link-dest="/etc/init.d/TWWopenldap2127"/>
      <init link-src="/etc/rc1.d/K19TWWopenldap2127"
        link-dest="/etc/init.d/TWWopenldap2127"/>
      <init link-src="/etc/rc0.d/K19TWWopenldap2127"
        link-dest="/etc/init.d/TWWopenldap2127"/>

      <config>/etc/init.d/TWWopenldap2127</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/ldap.conf</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/slapd.conf</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/corba.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/core.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/cosine.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/inetorgperson.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/java.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/misc.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/nis.schema</config>
      <config upgrade="1">/etc${INSTALL_PREFIX}/schema/openldap.schema</config>

      <subpkg type="runtime">
        <depend pkgname-base="TWWcsl21"
          title="Cyrus SASL Library"
          subpkg="runtime">v&gt;=2.1.15</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWldb42"
          title="Berkeley DB"
          subpkg="runtime">v&gt;=4.2.52</depend>
        <depend pkgname-base="TWWss097"
          title="OpenSSL SSL/TLS Crypto Toolkit"
          subpkg="runtime">v&gt;=0.9.7b</depend>
      </subpkg>

      <replace pkgname-base="TWWld21b"
        install-name="openldap2123"/>
      <replace pkgname-base="TWWld21a"
        install-name="openldap218"/>
      <replace pkgname-base="TWWld20d"
        install-name="openldap2023"/>
    </package-manager>
  </package>
</packages>
