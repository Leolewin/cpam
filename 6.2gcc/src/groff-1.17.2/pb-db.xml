<?xml version="1.0"?>
<packages>
  <package name="groff" version="1.17.2" revision="3">
    <package-manager name="pkgadd">
      <category>Applications/Publishing</category>
      <title>GNU Groff</title>
      <vendor>Free Software Foundation</vendor>

      <description attribution="freshmeat.net">
This is the GNU groff document formatting system. Groff (GNU Troff) is
a document processor which reads plain text mixed with formatting
commands and produces formatted output. The Groff package contains the
traditional UNIX text formatting tools troff, nroff, tbl, eqn, and
pic. Output can be produced in a number of formats including plain
ASCII and PostScript.
      </description>

      <install-name>groff11</install-name>

      <pkgname-base>TWWgrf11</pkgname-base>

      <version>1.17.2</version>
      <revision>1</revision>

      <wrapper name="gxditview" path="pkg/gxditview-wrapper"
        checksum="67dcffa4affb7df4c3556c2f1b154f72"
        checksum-type="md5" size="396"/>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          systype="*-solaris2.5.1"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWpl582"
          title="Perl Programming Language"
          subpkg="runtime">v&gt;=5.8.2</depend>
      </subpkg>
    </package-manager>

    <changelog>
      <change date="2004 January 13" revision="3"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Updated Perl dependency to 5.8.2</para></item>
      </change>

      <change date="2003 November 10" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Updated GCC dependency to 3.2.3 for HP-UX
10.20</para></item>
        <item><para>Updated GCC dependency to 3.3.2</para></item>
      </change>

      <change date="2003 May 18" revision="1"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Update Perl dependency to 5.6.1</para></item>
      </change>
    </changelog>
  </package>
</packages>
