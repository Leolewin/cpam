<?xml version="1.0"?>
<packages>
  <package name="xfig" version="3.2.3d">
    <package-manager name="pkgadd">
      <category>Applications/Multimedia</category>
      <title>Xfig</title>
      <vendor>Brian V. Smith</vendor>

      <description>
Xfig is a menu-driven tool that allows the user to draw and manipulate
objects interactively in an X window. The resulting pictures can be
saved, printed on postscript printers or converted to a variety of
other formats (e.g. to allow inclusion in LaTeX documents).
      </description>

      <install-name>xfig32</install-name>

      <pkgname-base>TWWxfg32</pkgname-base>

      <version>3.2.3d</version>
      <revision>1</revision>

      <wrapper name="xfig" path="pkg/xfig-wrapper"
        checksum="82a41dc73258add108d4056a765d6fcd"
        checksum-type="md5" size="408"/>

      <subpkg type="runtime">
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.0</depend>
        <depend pkgname-base="TWWtfg32"
          title="Transfig"
          subpkg="runtime">v&gt;=3.2.3d</depend>
        <depend pkgname-base="TWWxpm"
          title="XPM Image Library"
          subpkg="runtime">v&gt;=3.4k</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.3</depend>
      </subpkg>

      <replace pkgname-base="TWWxfig"
        install-name="xfig"/>
    </package-manager>
  </package>
</packages>
