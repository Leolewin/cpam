<?xml version="1.0"?>
<packages>
  <package name="gtk+" version="2.2.4" revision="1">
    <package-manager name="pkgadd">
      <category>System Environment/Libraries</category>
      <title>GTK+ Library</title>
      <vendor>The GTK+ Team</vendor>

      <description attribution="FreeBSD Ports Collection">
GTK is a library for creating graphical user interfaces similar to the
Motif "look and feel". It is designed to be small and efficient, but
still flexible enough to allow the programmer freedom in the
interfaces created. GTK allows the programmer to use a variety of
standard user interface widgets such as push, radio and check buttons,
menus, lists and frames. It also provides several "container" widgets
which can be used to control the layout of the user interface
elements.
      </description>

      <install-name>libgtk+22</install-name>

      <pkgname-base>TWWgtk22</pkgname-base>

      <version>2.2.4</version>
      <revision>1</revision>

      <subpkg type="runtime">
        <depend pkgname-base="TWWatk14"
          title="Accessibility Toolkit Library"
          subpkg="runtime">v&gt;=1.4.1</depend>
        <depend pkgname-base="TWWfcp22"
          title="Font configuration and rendering"
          subpkg="runtime">v&gt;=2.2</depend>
        <depend pkgname-base="TWWgc332"
          title="GNU Compiler Collection"
          subpkg="libruntime">v&gt;=3.3.2</depend>
        <depend pkgname-base="TWWglb22"
          title="Glib Library"
          subpkg="runtime">v&gt;=2.2.3</depend>
        <depend pkgname-base="TWWgt011"
          title="GNU Gettext"
          subpkg="runtime">v&gt;=0.11.4</depend>
        <depend pkgname-base="TWWicn18"
          title="Iconv Library"
          subpkg="runtime">v&gt;=1.8</depend>
        <depend pkgname-base="TWWjpeg"
          title="JPEG Image Library"
          subpkg="runtime">v&gt;=6b</depend>
        <depend pkgname-base="TWWlpn12"
          title="Pango Text Layout/Rendering Library"
          subpkg="runtime">v&gt;=1.2.5</depend>
        <depend pkgname-base="TWWpng12"
          title="PNG Image Library"
          subpkg="runtime">v&gt;=1.2.4</depend>
        <depend pkgname-base="TWWtif35"
          title="TIFF Image Library"
          subpkg="runtime">v&gt;=3.5.7</depend>
        <depend pkgname-base="TWWttf21"
          title="FreeType Library"
          subpkg="runtime">v&gt;=2.1.2</depend>
        <depend pkgname-base="TWWzlb11"
          title="ZLIB Compression Library"
          subpkg="runtime">v&gt;=1.1.4</depend>
      </subpkg>

      <replace pkgname-base="TWWgtk20"
        install-name="libgtk+20"/>
      <replace pkgname-base="TWWgtk12"
        install-name="gtk+12"/>
    </package-manager>

    <changelog>
