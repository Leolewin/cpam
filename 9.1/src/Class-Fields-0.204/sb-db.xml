    <test>
<![CDATA[
gmake test
]]>
    </test>

    <install>
<![CDATA[
gmake install
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Class/Fields/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Class/Fields/.packlist
rmdir ${_installsitearch}/auto/Class/Fields 2>/dev/null
rmdir ${_installsitearch}/auto/Class 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Class::Fields|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

