<?xml version="1.0"?>
<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="Tie-EncryptedHash" version="1.24" revision="1">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="da2bd8aa366c6454b168b72f2635491e"
        checksum-type="md5" size="10515"
        path="src/Tie-EncryptedHash-1.24.tar.gz"/>
    </sources>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test>
<![CDATA[
gmake test
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Tie/EncryptedHash/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Tie/EncryptedHash/.packlist
rmdir ${_installsitearch}/auto/Tie 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Tie::EncryptedHash|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

    <module name="5.8.8">
      <install-name>perl588p</install-name>

      <dependencies>
        <depend program="Crypt-Blowfish"
          module="5.8.8">v&gt;=2.09</depend>
        <depend program="Crypt-CBC" module="5.8.8">v&gt;=2.30</depend>
        <depend program="Crypt-DES" module="5.8.8">v&gt;=2.05</depend>
        <depend program="perl" var="PERL">v==5.8.8</depend>
      </dependencies>
    </module>

    <module name="5.12.2">
      <install-name>perl5122p</install-name>

      <dependencies>
        <depend program="Crypt-Blowfish"
          module="5.12.2">v&gt;=2.09</depend>
        <depend program="Crypt-CBC" module="5.12.2">v&gt;=2.30</depend>
        <depend program="Crypt-DES" module="5.12.2">v&gt;=2.05</depend>
        <depend program="perl" var="PERL">v==5.12.2</depend>
      </dependencies>
    </module>
  </program>
</programs>
