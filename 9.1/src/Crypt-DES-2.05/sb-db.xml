      <dependencies>
        <depend program="Crypt-CBC" module="5.8.8">v&gt;=2.30</depend>
        <depend program="gcc" install-name="gcc44"
          add-path="prepend">v&gt;=4.4.6</depend>
        <depend program="perl" var="PERL">v==5.8.8</depend>
      </dependencies>
