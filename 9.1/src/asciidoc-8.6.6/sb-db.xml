<?xml version="1.0"?>
<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="asciidoc" version="8.6.6" revision="1">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <install-name>asciidoc86</install-name>

    <sources>
      <source checksum="44b872d9c300ffa5a8fe8b3c4d10957c"
        checksum-type="md5" size="881704"
        path="src/asciidoc-8.6.6.tar.gz"/>
      <patch checksum="b1e3858eae339a16fcc2e13879a251bc"
        checksum-type="md5" size="1445"
        path="src/asciidoc-8.6.6.tww.patch"/>
    </sources>

    <dependencies>
      <depend program="python" var="PYTHON" install-name="python26"
        add-path="prepend">v&gt;=2.6.7</depend>
    </dependencies>

    <script-header>
<![CDATA[
_datadir="${SB_INSTALL_PREFIX}/share"
_sysconfdir="${SB_INSTALL_PREFIX}/etc"
]]>
    </script-header>

    <configure>
<![CDATA[
${SHELL} ./configure --datadir=${_datadir} --datarootdir=${_datadir} \
--mandir="${SB_INSTALL_PREFIX}/man" --sysconfdir=${_sysconfdir} \
--prefix=${SB_INSTALL_PREFIX}

${SB_PATH_SED} -i -e "\
s!@PYTHON@!${SB_VAR_PYTHON}/bin/python!g;" \
a2x.py asciidoc.py
]]>
    </configure>

    <licenses>
      <license path="gpl-2.license"/>
    </licenses>
  </program>
</programs>
