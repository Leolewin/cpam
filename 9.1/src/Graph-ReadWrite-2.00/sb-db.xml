    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Graph/ReadWrite/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Graph/ReadWrite/.packlist
rmdir ${_installsitearch}/auto/Graph/ReadWrite
rmdir ${_installsitearch}/auto/Graph 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Graph::ReadWrite|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

