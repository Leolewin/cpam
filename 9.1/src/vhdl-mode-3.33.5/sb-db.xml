<?xml version="1.0"?>
<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="vhdl-mode" version="3.33.5" revision="2">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="86210714e418a1f9d21e2a3597d995c3"
        checksum-type="md5" size="412455"
        path="src/vhdl-mode-3.33.5.tar.gz"/>
    </sources>

    <build>
<![CDATA[
${SB_VAR_XEMACS}/bin/xemacs -batch --vanilla -f batch-byte-compile \
vhdl-mode.el
]]>
    </build>

    <install>
<![CDATA[
${SB_PATH_INSTALL} -m 755 -o root -g 0 -d \
${SB_INSTALL_PREFIX}/packages/info \
${SB_INSTALL_PREFIX}/packages/lisp/vhdl

${SB_PATH_INSTALL} -m 644 -o root -g 0 vhdl-mode.info \
${SB_INSTALL_PREFIX}/packages/info

${SB_PATH_INSTALL} -m 644 -o root -g 0 INSTALL vhdl-mode.el \
vhdl-mode.elc ${SB_INSTALL_PREFIX}/packages/lisp/vhdl
cat >${SB_INSTALL_PREFIX}/packages/lisp/vhdl/_pkg.el <<_EOT_
;;;###autoload
(package-provide 'vhdl
		:version 3.33.5
		:type 'regular)
_EOT_
]]>
    </install>

    <uninstall>
<![CDATA[
rm -rf ${SB_INSTALL_PREFIX}/packages/info/vhdl-mode.info \
${SB_INSTALL_PREFIX}/packages/lisp/vhdl
]]>
    </uninstall>

    <module name="xemacs-21.5.28"
    systype="!*-osf4*">
      <install-name>xemacs215p</install-name>

      <dependencies>
        <depend program="xemacs" var="XEMACS"
          install-name="xemacs215">v&gt;=21.5.28</depend>
      </dependencies>
    </module>

    <module name="xemacs-21.4.17"
    systype="!*-osf4*">
      <install-name>xemacs214p</install-name>

      <dependencies>
        <depend program="xemacs" var="XEMACS"
          install-name="xemacs214">v&gt;=21.4.17</depend>
      </dependencies>
    </module>

    <changelog>
      <change date="2007 August 31" revision="2"
      author="Peter O'Gorman" email="pogma@thewrittenword.com">
        <item><para>Add xemacs-21.5.28 module</para></item>
      </change>
    </changelog>
  </program>
</programs>
