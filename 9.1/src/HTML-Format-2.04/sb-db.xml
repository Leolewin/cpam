<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="HTML-Format" version="2.04" revision="4">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="2d287392b77c959f06397371116c2d7e"
        checksum-type="md5" size="23260"
        path="src/HTML-Format-2.04.tar.gz"/>
    </sources>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test>
<![CDATA[
gmake test
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/HTML-Format/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/HTML-Format/.packlist
rmdir ${_installsitearch}/auto/HTML-Format 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<HTML-Format|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

    <module name="5.8.8">
      <install-name>perl588p</install-name>

      <dependencies>
        <depend program="Font-AFM" module="5.8.8">v&gt;=1.18</depend>
        <depend program="HTML-Tree" module="5.8.8">v&gt;=3.18</depend>
        <depend program="perl" var="PERL">v==5.8.8</depend>
      </dependencies>
    </module>

    <module name="5.12.2">
