    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/HTML/Mason/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/HTML/Mason/.packlist
rmdir ${_installsitearch}/auto/HTML/Mason 2>/dev/null
rmdir ${_installsitearch}/auto/HTML 2>/dev/null

:
]]>
