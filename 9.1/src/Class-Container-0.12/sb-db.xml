    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Class/Container/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Class/Container/.packlist
rmdir ${_installsitearch}/auto/Class/Container 2>/dev/null
rmdir ${_installsitearch}/auto/Class 2>/dev/null

:
]]>
    </uninstall>

