<?xml version="1.0"?>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
<programs>
  <program name="Test-Pod-Coverage" version="1.08" revision="2">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="33405cca7c75b7b89c06ba30eea66692"
        checksum-type="md5" size="6418"
        path="src/Test-Pod-Coverage-1.08.tar.gz"/>
    </sources>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test>
<![CDATA[
gmake test
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Test/Pod/Coverage/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Test/Pod/Coverage/.packlist
rmdir ${_installsitearch}/auto/Test/Pod/Coverage
rmdir ${_installsitearch}/auto/Test/Pod
rmdir ${_installsitearch}/auto/Test 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Test::Pod::Coverage|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

    <module name="5.8.8">
      <install-name>perl588p</install-name>

      <dependencies>
        <depend program="Pod-Coverage"
          module="5.8.8">v&gt;=0.18</depend>
        <depend program="Test-Simple"
          module="5.8.8">v&gt;=0.86</depend>
        <depend program="perl" var="PERL">v==5.8.8</depend>
      </dependencies>
    </module>

    <module name="5.12.2">
      <install-name>perl5122p</install-name>

      <dependencies>
