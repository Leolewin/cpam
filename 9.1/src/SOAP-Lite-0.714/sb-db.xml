    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/SOAP/Lite/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/SOAP/Lite/.packlist
rmdir ${_installsitearch}/auto/SOAP/Lite
rmdir ${_installsitearch}/auto/SOAP 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<SOAP::Lite|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

