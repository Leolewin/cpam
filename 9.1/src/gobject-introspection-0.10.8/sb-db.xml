<?xml version="1.0"?>
<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="gobject-introspection" version="0.10.8" revision="1">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <install-name>libgir010</install-name>

    <sources>
      <source checksum="b5da58a5327d13b4d1e08b8e42b2456d"
        checksum-type="md5" size="1024874"
        path="src/gobject-introspection-0.10.8.tar.bz2"/>
      <patch checksum="c714861102962b01fe6d8d153d3395d0"
        checksum-type="md5" size="25793"
        path="src/gobject-introspection-0.10.8.tww.patch"/>
      <patch checksum="8b12a1d42b9e780205d493abc8c335bd"
        checksum-type="md5" size="211426"
        path="src/gobject-introspection-0.10.8.gnulib.patch"/>
      <patch checksum="1fafe90697690cd1b30908e19c579161"
        checksum-type="md5" size="1819669"
        path="src/gobject-introspection-0.10.8.auto.patch"/>
    </sources>

    <dependencies>
      <depend program="bison" install-name="bison24"
        add-path="prepend" type="build">v&gt;=2.4.3</depend>
      <depend program="flex" install-name="flex25" add-path="prepend"
        type="build">v&gt;=2.5.35</depend>
      <depend program="pkgconfig" install-name="pkgconfig02"
        add-path="prepend" type="build">v&gt;=0.25</depend>
      <depend program="python" install-name="python26"
        add-path="prepend">v&gt;=2.6.7</depend>
      <depend program="cairo" var="LIBCAIRO"
        install-name="libcairo110">v&gt;=1.10.2</depend>
      <depend program="fcpackage" var="FCPACKAGE"
        install-name="fcpackage28">v&gt;=2.8</depend>
      <depend program="freetype" var="LIBTTF"
        install-name="libttf24">v&gt;=2.4.6</depend>
      <depend program="gettext" var="GETTEXT"
        install-name="gettext018"
        add-path="prepend">v&gt;=0.18.1.1</depend>
      <depend program="libffi" var="LIBFFI"
        install-name="libffi30">v&gt;=3.0.10</depend>
      <depend program="libiconv" var="LIBICONV"
        install-name="libiconv113">v&gt;=1.13.1</depend>
      <depend program="libpng" var="LIBPNG"
        install-name="libpng14">v&gt;=1.4.4</depend>
      <depend program="zlib" var="LIBZ"
        install-name="libz12">v&gt;=1.2.5</depend>
      <depend program="gcc" var="GCC" install-name="gcc44"
        add-path="prepend" type="build">v&gt;=4.4.6</depend>
      <depend var="GCC_RT" install-name="gcc44r"/>
      <depend program="glib" var="LIBGLIB" install-name="libglib226"
        module="gcc44">v&gt;=2.26.1</depend>
      <depend program="make" add-path="prepend"
        type="build">v==3.82</depend>
    </dependencies>

    <script-header>
<![CDATA[
_datadir="${SB_INSTALL_PREFIX}/share"
_docdir="${SB_INSTALL_PREFIX}/doc"

_gccsubdir="gcc44"

export PKG_CONFIG_PATH="${SB_VAR_LIBCAIRO_LIB}/pkgconfig:\
${SB_VAR_FCPACKAGE_LIB}/pkgconfig:${SB_VAR_LIBFFI_LIB}/pkgconfig:\
${SB_VAR_LIBTTF_LIB}/pkgconfig:\
${SB_VAR_LIBGLIB_LIB}/${_gccsubdir}/pkgconfig:\
${SB_VAR_GETTEXT_LIB}/pkgconfig:${SB_VAR_LIBICONV_LIB}/pkgconfig:\
${SB_VAR_LIBPNG_LIB}/pkgconfig:${SB_VAR_LIBZ_LIB}/pkgconfig"
]]>
    </script-header>

    <configure>
<![CDATA[
case "${SB_SYSTYPE}" in
*-aix*)
  CFLAGS="-O2 -mcpu=powerpc"
  LDFLAGS="-Wl,-brtl -Wl,-blibpath:/usr/lib"
  CC_LD_RT="-Wl,-blibpath:" ;;
ia64*-hpux*)
  CC_LD_RT="-Wl,+b," ;;
*-hpux*)
  CC_LD_RT="-Wl,+s,+b," ;;
*-irix*)
  CC_LD_RT="-Wl,-rpath," ;;
i?86*-linux*)
  CFLAGS="-O2 -mtune=pentiumpro -march=pentiumpro"
  CC_LD_RT="-Wl,-rpath," ;;
*-linux*)
  CC_LD_RT="-Wl,-rpath," ;;
*-osf*)
  CFLAGS="-O2 -mcpu=ev5"
  CC_LD_RT="-Wl,-rpath," ;;
i?86*-solaris*)
  CFLAGS="-O2 -mtune=pentium4 -march=pentium4"
  CC_LD_RT="-R" ;;
*-solaris*)
  CFLAGS="-O2 -mcpu=ultrasparc -mvis"
  CC_LD_RT="-R" ;;
esac

${SHELL} ./configure CC="${CC:-gcc}" CFLAGS="${CFLAGS:--O2}" \
LDFLAGS="${LDFLAGS+${LDFLAGS}} ${SB_VAR_GCC+-L${SB_VAR_GCC_RT_LIB} \
${CC_LD_RT}${SB_VAR_GCC_RT_LIB}}" --enable-static --enable-shared \
--disable-silent-rules --disable-dependency-tracking \
${ARGS+${ARGS}} --datarootdir=${_datadir} --datadir=${_datadir} \
--with-html-dir=${_docdir} --mandir="${SB_INSTALL_PREFIX}/man" \
--prefix=${SB_INSTALL_PREFIX}

${SB_PATH_SED} -i -e "\
s!-L\(\${libdir}\)!-L\1 ${CC_LD_RT}\1!;" \
gobject-introspection-1.0.pc \
gobject-introspection-no-export-1.0.pc

# HP-UX shared libraries end with .sl
${SB_PATH_SED} -i -e "\
s!\.so!.sl!" tests/scanner/*-expected.gir
]]>
    </configure>

    <build>
<![CDATA[
CACHEDIR=${SB_BUILD_PREFIX} gmake
]]>
    </build>

    <test auto-include="0">
      <dependencies replace="0">
        <depend program="diffutils" var="DIFF"
          install-name="diffutils32">v&gt;=3.2</depend>
        <depend program="glib" install-name="libglib226"
          add-path="prepend">v&gt;=2.26.1</depend>
      </dependencies>
<![CDATA[
CACHEDIR=${SB_BUILD_PREFIX} \
gmake check DIFF="${SB_VAR_DIFF}/bin/gnudiff"
]]>
    </test>
  </program>
</programs>
