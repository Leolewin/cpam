<!DOCTYPE programs SYSTEM "sb-db.dtd">
<programs>
  <program name="Test-MockModule" version="0.05" revision="2">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="1b013aeeb221f83e7f325a2f98169296"
        checksum-type="md5" size="5608"
        path="src/Test-MockModule-0.05.tar.gz"/>
    </sources>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test>
<![CDATA[
gmake test

: ignore test failures
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Test/MockModule/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Test/MockModule/.packlist
rmdir ${_installsitearch}/auto/Test/MockModule 2>/dev/null
rmdir ${_installsitearch}/auto/Test 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Test::MockModule|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

