]]>
    </build>

    <test>
<![CDATA[
./Build test
]]>
    </test>

    <install>
<![CDATA[
./Build install
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Text/Wrapper/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Text/Wrapper/.packlist
rmdir ${_installsitearch}/auto/Text/Wrapper 2>/dev/null
rmdir ${_installsitearch}/auto/Text 2>/dev/null

:
]]>
    </uninstall>

