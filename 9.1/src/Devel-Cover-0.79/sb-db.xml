<?xml version="1.0"?>
<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="Devel-Cover" version="0.79" revision="1">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="476037bb7dc7b075de355832de16f2ca"
        checksum-type="md5" size="184973"
        path="src/Devel-Cover-0.79.tar.gz"/>
    </sources>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test>
<![CDATA[
gmake test

: ignore test failures
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Devel/Cover/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Devel/Cover/.packlist
rmdir ${_installsitearch}/auto/Devel/Cover 2>/dev/null
rmdir ${_installsitearch}/auto/Devel 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Devel::Cover|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

    <module name="5.12.2">
      <install-name>perl5122p</install-name>

      <dependencies>
        <depend program="PPI-HTML" module="5.12.2">v&gt;=1.07</depend>
        <depend program="Perl-Tidy"
          module="5.12.2">v&gt;=20070801</depend>
        <depend program="Pod-Coverage"
          module="5.12.2">v&gt;=0.17</depend>
        <depend program="Test-Differences"
          module="5.12.2">v&gt;=0.47</depend>
        <depend program="Test-Warn" module="5.12.2">v&gt;=0.11</depend>
        <depend program="gcc" install-name="gcc44"
          add-path="prepend">v&gt;=4.4.6</depend>
        <depend program="perl" var="PERL">v==5.12.2</depend>
      </dependencies>
    </module>
  </program>
</programs>
