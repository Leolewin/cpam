<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="Ima-DBI" version="0.35" revision="2">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="f3c5c0b1fe509556ca35f08aae91b3f5"
        checksum-type="md5" size="15932"
        path="src/Ima-DBI-0.35.tar.gz"/>
    </sources>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test>
<![CDATA[
gmake test
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Ima/DBI/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Ima/DBI/.packlist
rmdir ${_installsitearch}/auto/Ima/DBI
rmdir ${_installsitearch}/auto/Ima 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Ima::DBI|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

