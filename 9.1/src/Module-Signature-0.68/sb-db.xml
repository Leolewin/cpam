<?xml version="1.0"?>
<programs>
<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="Module-Signature" version="0.68" revision="2">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <sources>
      <source checksum="c63c0b5c4e7162fc0c44512e1f832e5e"
        checksum-type="md5" size="76485"
        path="src/Module-Signature-0.68.tar.gz"/>
      <patch checksum="56faf31912af599e043ed05e753fb094"
        checksum-type="md5" size="1385"
        path="src/Module-Signature-0.68.tww.patch"/>
    </sources>

    <dependencies>
      <depend program="gnupg" var="GNUPG" install-name="gnupg14"
        add-path="prepend">v&gt;=1.4.11</depend>
    </dependencies>

    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Makefile.PL PREFIX=${SB_INSTALL_PREFIX}
]]>
    </configure>

    <test auto-include="0">
<![CDATA[
gmake test
]]>
    </test>

    <install>
<![CDATA[
gmake install UNINST=1
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Module/Signature/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Module/Signature/.packlist
rmdir ${_installsitearch}/auto/Module/Signature 2>/dev/null
rmdir ${_installsitearch}/auto/Module 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<Module::Signature|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
    </uninstall>

    <module name="5.12.2">
      <install-name>perl5122p</install-name>

      <dependencies replace="0">
        <depend program="Digest-SHA1"
          module="5.12.2">v&gt;=2.11</depend>
        <depend program="PAR-Dist" module="5.12.2">v&gt;=0.44</depend>
        <depend program="perl" var="PERL">v==5.12.2</depend>
      </dependencies>
    </module>

    <changelog>
      <change date="2011 December 22" revision="2"
      author="Albert Chin-A-Young" email="china@thewrittenword.com">
        <item><para>Update gnupg dependency from 1.4.10 to
1.4.11</para></item>
      </change>
    </changelog>
  </program>
</programs>
