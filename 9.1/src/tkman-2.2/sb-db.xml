<!DOCTYPE programs SYSTEM "sb-db.dtd">
  <program name="tkman" version="2.2" revision="5">
    <build-name>${SB_PROG_NAME}-${SB_PROG_VER}</build-name>

    <install-name>${SB_PROG_NAME}22</install-name>

    <sources>
      <source checksum="0e81735c93ab2500d6105ff33095c3e8"
        checksum-type="md5" size="229273"
        path="src/tkman-2.2.tar.gz"/>
      <patch checksum="e2b3c615aa8db72932b5f746129b30f7"
        checksum-type="md5" size="1351"
        path="src/tkman-2.2.patch"/>
    </sources>

    <dependencies>
      <depend program="tk" var="TK"
        install-name="tk85">v&gt;=8.5.10</depend>
    </dependencies>

    <configure>
<![CDATA[
gmake WISH=${SB_VAR_TK}/bin/wish8.4 BINDIR=${SB_INSTALL_PREFIX}/bin \
gzgrep=grep \
mastermen="\"/usr/share/man /usr/man ${SB_INSTALL_BASE}/man /usr/local/man\"" \
masterbin="\"/usr/bin ${SB_INSTALL_BASE}/bin /usr/local/bin\"" \
${manformat+manformat="${manformat}"}
]]>
    </configure>

    <install>
<![CDATA[
${SB_PATH_INSTALL} -o root -g 0 -m 755 -d ${SB_INSTALL_PREFIX}/bin

gmake WISH=${SB_VAR_TK}/bin/wish8.4 BINDIR=${SB_INSTALL_PREFIX}/bin \
${manformat+manformat="${manformat}"} install
]]>
    </install>

