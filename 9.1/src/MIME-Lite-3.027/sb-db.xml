<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/MIME/Lite/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/MIME/Lite/.packlist
rmdir ${_installsitearch}/auto/MIME/Lite
rmdir ${_installsitearch}/auto/MIME 2>/dev/null

${SB_PATH_SED} -i -e "\
/head2.*L<MIME::Lite|/,/back/ {
  g
  N
  d
}" ${_installsitearch}/perllocal.pod
]]>
