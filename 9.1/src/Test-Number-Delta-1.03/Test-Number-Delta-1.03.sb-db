    <configure>
<![CDATA[
${SB_VAR_PERL}/bin/perl Build.PL
]]>
    </configure>

    <build>
<![CDATA[
./Build
]]>
    </build>

    <test>
<![CDATA[
./Build test
]]>
    </test>

    <install>
<![CDATA[
./Build install
]]>
    </install>

    <uninstall>
<![CDATA[
_installsitearch=$(${SB_VAR_PERL}/bin/perl -e \
'use Config;
print $Config{"installsitearch"} . "\n";')

cat ${_installsitearch}/auto/Test/Number/Delta/.packlist |\
while read _file; do
  rm ${_file}

  _dir=$(dirname ${_file})
  test -d ${_dir} && rmdir ${_dir} 2>/dev/null
done

rm ${_installsitearch}/auto/Test/Number/Delta/.packlist
rmdir ${_installsitearch}/auto/Test/Number/Delta
rmdir ${_installsitearch}/auto/Test/Number 2>/dev/null
rmdir ${_installsitearch}/auto/Test 2>/dev/null
]]>
    </uninstall>

    <module name="5.8.8">
      <install-name>perl588p</install-name>

      <dependencies>
        <depend program="Module-Build"
          module="5.8.8">v&gt;=0.33</depend>
        <depend program="Test-Simple"
          module="5.8.8">v&gt;=0.86</depend>
        <depend program="perl" var="PERL">v==5.8.8</depend>
      </dependencies>
    </module>

